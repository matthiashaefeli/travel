<!DOCTYPE html>
<html>
  <head>
    <title>Travel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navBar">
      <% if current_user %>
        <div class='left'><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></div>
      <% else %>
        <div class='right'><%= link_to 'Home', root_path %></div>
        <div class='left'><%= link_to 'Sign In', new_user_session_path %></div>
        <div class='left'><%= link_to 'Sign Up', new_user_registration_path %></div>
      <% end %>
    </div>
    <p class = "notice" ><%= notice %> </p>
    <p class = "alert" ><%= alert %></p>
    <%= yield %>
  </body>
</html>
