<h1>Travel Times</h1>
<div id='travelTimeError'></div>
<div>
  <p>
    <%= link_to 'Add new Distance Calculation',
        new_travel_time_path,
        onclick: 'inputForm()',
        id: 'travelTimeFormLink',
        remote: true %>
  </p>
</div>
<div>
  <table>
    <thead>
      <tr>
        <td>Start Point</td>
        <td>End Point</td>
        <td>Distance</td>
        <td>Duration</td>
      </tr>
    </thead>
    <tbody class='travelTimeTableBody'>
      <% @travel_times.each do |travel_time| %>
        <%= render partial: 'travel_time_row', locals: { travel_time: travel_time } %>
      <% end %>
    </tbody>
  </table>
</div>
